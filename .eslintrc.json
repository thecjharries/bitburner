{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "semi": ["error", "always"]
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "promise"
    ]
}
